        },
        {
            "id": "0x104",
            "setter": "act",
            "signals": [
                {"name": "water_pump_state",     "type": "uint8_t", "start":  0, "length": 1, "values": "astate", "getters": ["com", "hmi", "sns"], "comment": "the water pump state"},
