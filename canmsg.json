                {"name": "water_level_status",        "type": "uint8_t",  "start": 38, "length":  1, "values": "status",    "getters": ["act", "hmi", "com", "sns"], "comment": "the water level sensor status"},
                {"name": "soil_moisture",             "type": "uint8_t",  "start": 39, "length":  7, "range" : [0, 100],    "getters": ["act", "hmi", "com"],        "comment": "the soil moisture"},
                {"name": "soil_moisture_status",      "type": "uint8_t",  "start": 46, "length":  1, "values": "status",    "getters": ["act", "hmi", "com", "sns"], "comment": "the soil moisture sensor status"},
