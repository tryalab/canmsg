            "setter": "hmi",
            "signals": [
                {"name": "watering_time_max",          "default": 15,  "type": "uint8_t",  "start":  0, "length":  5, "range": [10, 31],    "getters": ["act", "hmi", "com"], "comment": "the max time for a watering cycle"},
                {"name": "watering_volume_max",        "default": 300, "type": "uint16_t", "start":  5, "length": 11, "range": [100, 2047], "getters": ["act", "hmi", "com"], "comment": "the max used water in a watering cycle"},
                {"name": "light_intensity_target_min", "default": 50,  "type": "uint8_t",  "start": 16, "length":  7, "range": [0, 100],    "getters": ["act", "hmi", "com"], "comment": "the min light intensity"},
                {"name": "light_intensity_target_max", "default": 80,  "type": "uint8_t",  "start": 23, "length":  7, "range": [0, 100],    "getters": ["act", "hmi", "com"], "comment": "the max light intensity"},
