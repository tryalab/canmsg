                {"name": "heater_state",         "type": "uint8_t", "start": 12, "length": 1, "values": "astate", "getters": ["com", "hmi"],        "comment": "the heating element state"},
                {"name": "heater_status",        "type": "uint8_t", "start": 13, "length": 1, "values": "status", "getters": ["com", "hmi"],        "comment": "the heating element status"},
                {"name": "window_state",         "type": "uint8_t", "start": 14, "length": 1, "values": "wstate", "getters": ["com", "hmi"],        "comment": "the window state"},
                {"name": "window_status",        "type": "uint8_t", "start": 15, "length": 1, "values": "status", "getters": ["com", "hmi"],        "comment": "the window status"},
                {"name": "node_status",          "type": "uint8_t", "start": 16, "length": 4, "values": "actsys", "getters": ["com", "hmi", "act"], "comment": "the actuator node status"}
            ]
        }, 
