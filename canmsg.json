            "setter": "com",
            "signals": [
                {"name": "datetime_year",       "type": "uint16_t", "start":  0, "length": 12, "range" : [2024, 4095], "getters": ["com", "hmi"], "comment": "the rtc current year"},
                {"name": "datetime_month",      "type": "uint8_t",  "start": 12, "length":  4, "range" : [1, 12],      "getters": ["com", "hmi"], "comment": "the rtc current month"},
