{
    "speed": 250000,
    "nodes": {
        "hmi": {
            "name": "HMI"
        },
        "sns": {
            "name": "Sensor",
            "ADC_RESOLUTION": 12
        },
        "act": {
            "name": "Actuator"
        },
        "com": {
            "name": "Communication"
        }
    },
    "defines": {
        "astate": ["OFF", "ON"],
        "status": ["OKAY", "ERROR"],
        "wstate": ["CLOSED", "OPENED"],
        "system": ["OKAY", "ERROR", "WARNING"],
        "serial": ["DISCONNECTED", "CONNECTED"],
        "snssys": ["OKAY", "ERROR_CANCOM", "ERROR_SENSOR", "ERROR_ACTUATOR"],
        "hmisys": ["OKAY", "ERROR_CANCOM", "ERROR_DEVICE", "WARNING_DATETIME"],
        "comsys": ["OKAY", "ERROR_CANCOM", "ERROR_DEVICE", "ERROR_I2C", "ERROR_WIFI", "ERROR_NTP", "ERROR_MQTT"],
        "actsys": ["OKAY", "ERROR_CANCOM", "ERROR_SENSOR", "ERROR_ACTUATOR", "ERROR_WATER_LEVEL", 
                           "WARNING_TEMPERATURE", "WARNING_HUMIDITY", "WARNING_LIGHT_INTENSITY", 
                           "WARNING_WATER_LEVEL", "WARNING_SOIL_MOISTURE"]
    },
    "messages": [
        {
            "id": "0x100",
            "setter": "hmi",
            "signals": [
                {"name": "heater_manual_mode",                  "type": "uint8_t",  "start":  0, "length":  1, "values": "astate",  "getters": ["act", "hmi", "com"], "comment": "the heating element manual mode"},
                {"name": "heater_manual_state",                 "type": "uint8_t",  "start":  1, "length":  1, "values": "astate",  "getters": ["act", "hmi", "com"], "comment": "the heating element manual state"},
                {"name": "window_manual_mode",                  "type": "uint8_t",  "start":  2, "length":  1, "values": "astate",  "getters": ["act", "hmi", "com"], "comment": "the window manual mode"},
                {"name": "window_manual_state",                 "type": "uint8_t",  "start":  3, "length":  1, "values": "wstate",  "getters": ["act", "hmi", "com"], "comment": "the window manual state"},
                {"name": "fans_manual_mode",                    "type": "uint8_t",  "start":  4, "length":  1, "values": "astate",  "getters": ["act", "hmi", "com"], "comment": "the fans manual mode"},
                {"name": "fans_manual_state",                   "type": "uint8_t",  "start":  5, "length":  1, "values": "astate",  "getters": ["act", "hmi", "com"], "comment": "the fans manual state"},
                {"name": "water_pump_manual_mode",              "type": "uint8_t",  "start":  6, "length":  1, "values": "astate",  "getters": ["act", "hmi", "com"], "comment": "the water pump manual mode"},
                {"name": "water_pump_manual_state",             "type": "uint8_t",  "start":  7, "length":  1, "values": "astate",  "getters": ["act", "hmi", "com"], "comment": "the water pump manual state"},
                {"name": "lamp_manual_mode",                    "type": "uint8_t",  "start":  8, "length":  1, "values": "astate",  "getters": ["act", "hmi", "com"], "comment": "the lamp manual mode"},
                {"name": "lamp_manual_light_intensity",         "type": "uint8_t",  "start":  9, "length":  7, "range" : [0, 100],  "getters": ["act", "hmi", "com"], "comment": "the lamp manual light intensity"},
                {"name": "system_status",                       "type": "uint8_t",  "start": 16, "length":  2, "values": "system",  "getters": ["hmi", "com"],        "comment": "the system status"},
                {"name": "nvm_status",                          "type": "uint8_t",  "start": 18, "length":  1, "values": "status",  "getters": ["hmi", "com"],        "comment": "the EEPROM status"},
