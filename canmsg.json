                {"name": "light_possible_max", "default": 50,   "type": "uint16_t", "start": 22, "length": 12, "range" : [0, 4095], "getters": ["sns", "hmi", "com"], "comment": "the LDR value when the lamp is completely on and there is environment light"},
                {"name": "light_possible_min", "default": 4000, "type": "uint16_t", "start": 34, "length": 12, "range" : [0, 4095], "getters": ["sns", "hmi", "com"], "comment": "the LDR value when the lamp is completely off and there is no environment light"}
            ]
        },
        {
